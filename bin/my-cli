#!/usr/bin/env node

const init = require('../commands/init.js')
const {program} = require('commander')
const {version} = require('../package.json')

program
  .name('my-cli')
  .version(version)
  .command('init')
  .description('Generate a new project')
  .action(init)

if (!process.argv.slice(2).length) {
  program.help()
} else {
  program.parse(process.argv)
}
