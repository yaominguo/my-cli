#!/usr/bin/env node

const program = require('commander')
const {version} = require('../package.json')


program
  .name('my-cli')
  .version(version)
  .command('init [name]')
  .description('Generate a new project')
  .action(() => require('../commands/init.js'))

if (!process.argv.slice(2).length) {
  program.help()
} else {
  program.parse(process.argv)
}
